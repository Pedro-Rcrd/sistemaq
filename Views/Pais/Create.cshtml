@model systemquchooch.Models.Pai

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/formularioscrear.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">

                <h1 class="text-center">Registro de País</h1>


                <p class="text-end">
                    <a class="btn btn-success" asp-controller="Pais" asp-action="Create">Nuevo País</a>
                    <a class="btn btn-outline-success" asp-controller="Pais" asp-action="Index">Lista de Países</a>

                </p>
                <hr class="LineaRecta" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 mx-auto">
                        <div class="form-group">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" data-val-required="Complete este campo." />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div></div></div>

                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Crear" class="btn btn-primary me-2 w-25" />
                        <a class="btn btn-outline-primary me-2 w-25" asp-controller="Registro" asp-action="Auxiliar">Cancelar</a>

            </div>
        </form>
    </div>
    </main>
</div>


</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $(document).ready(function () {
            $('form').submit(function (event) {
                // Evita que el formulario se envíe normalmente
                event.preventDefault();

                // Envía el formulario a través de AJAX
                $.ajax({
                    url: '@Url.Action("Create", "Pais")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (result) {
                        // Muestra una alerta de notificación usando SweetAlert
                        swal("Registro guardado correctamente", "", "success");

                        // Puedes redirigir al usuario a otra página después de mostrar la alerta
                        //window.location.href = '/Tutoriums/Create';

                        setTimeout(function () {
                            window.location.href = '/Pais/Create';
                        }, 2000); // 2000 milisegundos = 2 segundos
                    },
                    error: function (result) {
                        // Muestra una alerta de error si el registro no se guardó correctamente
                        swal("Error al guardar el registro", "", "error");
                    }
                });
            });
        });
    </script>

}