@model IEnumerable<systemquchooch.Models.Pai>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-controller="Pais" asp-action="ImprimirPais" target="_blank" class="btn btn-info text-white">Generar PDF</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoPais">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoPais">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoPais">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
