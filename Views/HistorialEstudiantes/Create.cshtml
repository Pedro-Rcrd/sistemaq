@model systemquchooch.Models.HistorialEstudiante

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/formularioscrear.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">

                <h1 class="text-center">Registrar Historial de estudiante</h1>


                <p class="text-end">
                    <a class="btn btn-success" asp-controller="HistorialEstudiantes" asp-action="Create">Nuevo Historial de Estudiante</a>
                    <a class="btn btn-outline-success" asp-controller="HistorialEstudiantes" asp-action="Index">Lista de Historial de Estudiantes</a>

                </p>
                <hr class="LineaRecta" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CodigoEstudiante" class="control-label"></label>
                <select asp-for="CodigoEstudiante" class ="form-control" asp-items="ViewBag.CodigoEstudiante"></select>
            </div></div>
                        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="CodigoNivelAcademico" class="control-label"></label>
                <select asp-for="CodigoNivelAcademico" class ="form-control" asp-items="ViewBag.CodigoNivelAcademico"></select>
            </div></div>
                        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="CodigoGrado" class="control-label"></label>
                <select asp-for="CodigoGrado" class ="form-control" asp-items="ViewBag.CodigoGrado"></select>
            </div></div></div>
                    <div class="row">
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CodigoCarrera" class="control-label"></label>
                <select asp-for="CodigoCarrera" class ="form-control" asp-items="ViewBag.CodigoCarrera"></select>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CodigoEstablecimiento" class="control-label"></label>
                <select asp-for="CodigoEstablecimiento" class ="form-control" asp-items="ViewBag.CodigoEstablecimiento"></select>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div></div></div>

                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Crear" class="btn btn-primary me-2 w-25" />
                        <a class="btn btn-outline-primary me-2 w-25" asp-controller="Registro" asp-action="Principal">Cancelar</a>
            </div>
        </form>
    </div>
    </main>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>