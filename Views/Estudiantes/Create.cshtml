@model systemquchooch.Models.Estudiante

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/formularioscrear.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">

                <h1 class="text-center">Registro de Estudiante</h1>


                <p class="text-end">
                    <a class="btn btn-success" asp-controller="Estudiantes" asp-action="Create">Nuevo Estudiante</a>
                    <a class="btn btn-outline-success" asp-controller="Estudiantes" asp-action="Index">Lista de Estudiantes</a>

                </p>
                <hr class="LineaRecta" />


                <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <h4>Información del estudiante</h4>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CodigoComunidad" class="control-label"></label>
                <select asp-for="CodigoComunidad" class ="form-control" asp-items="ViewBag.CodigoComunidad"></select>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
               <input asp-for="Nombre" class="form-control" data-val-required="Por favor, complete este campo." />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div></div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div></div></div>
                    <div class="row">
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FechaNacimieto" class="control-label"></label>
                <input asp-for="FechaNacimieto" class="form-control" type="date"/>
                <span asp-validation-for="FechaNacimieto" class="text-danger"></span>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div></div></div>
                    <div class="row">
                        <h4>Información de residencia</h4>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Sector" class="control-label"></label>
                <input asp-for="Sector" class="form-control" />
                <span asp-validation-for="Sector" class="text-danger"></span>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="NumeroCasa" class="control-label"></label>
                <input asp-for="NumeroCasa" class="form-control" />
                <span asp-validation-for="NumeroCasa" class="text-danger"></span>
            </div></div></div>
                    <div class="row">
                        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control campo-descripcion"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div></div></div>
                    <div class="row">
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FotoPerfil" class="control-label"></label>
                <input asp-for="FotoPerfil" class="form-control" name="imageFile" id="imageFile" type="file" />
                <span asp-validation-for="FotoPerfil" class="text-danger"></span>
            </div></div>
                        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div></div></div>

                    <div class="d-flex justify-content-end">
                <input type="submit" value="Crear" class="btn btn-primary me-2 w-25" />
                        <a class="btn btn-outline-primary me-2 w-25" asp-controller="Registro" asp-action="Principal">Cancelar</a>
            </div>
        </form>
    </div>
    </main>
</div>


    

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</body>
</html>