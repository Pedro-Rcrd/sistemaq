@model Paginacion<Estudiante>
@using systemquchooch.Data;
@using systemquchooch.Models;
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - systemquchooch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>
<body>


<h1 class="text-center">Lista de Estudiantes</h1>


<p class="text-end">
    <a class="btn btn-outline-success" asp-controller="Estudiantes" asp-action="Create">Nuevo Estudiante</a>
    <a class="btn btn-success" asp-controller="Estudiantes" asp-action="Index">Lista de Estudiantes</a>

</p>
<hr class="LineaRecta" />


<p>
    <a asp-controller="Estudiantes" asp-action="ImprimirEstudiantes" target="_blank" class="btn btn-success">Generar PDF</a>
</p>

<form asp-controller="Estudiantes" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-outline-success">Lista completa</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                FechaNacimieto
            </th>
            <th>
                Genero
            </th>
            <th>
                Estado
            </th>
            <th>
                Sector
            </th>
            <th>
                NumeroCasa
            </th>
            <th>
                Descripcion
            </th>
            <th>
                FotoPerfil
            </th>
            <th>
                FechaCreacion
            </th>
            <th>
                CodigoComunidadNavigation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimieto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoPerfil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoComunidadNavigation.NombreComunidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoEstudiante"><i class="fs-4 bi bi-pencil-fill text-success"></i></a>
                <a asp-action="Details" asp-route-id="@item.CodigoEstudiante"><i class="fs-4 bi bi-eye-fill text-success"></i></a>
                <a asp-action="Delete" asp-route-id="@item.CodigoEstudiante"><i class="fs-4 bi bi-trash3-fill text-success"></i></a>
                           </tr>
}
    </tbody>
</table>

@{
    var anteriordeshabilitado = !Model.PaginasAnteriores ? "disabled" : "";
    var siguientedeshabilitado = !Model.PaginasPosteriores ? "disabled" : "";
}

<div class="container mt-3">
    <ul class="pagination pagination-lg justify-content-end">
        <a asp-action="Index" asp-route-ordenActual="@ViewData["OrdenActual"]"
           asp-route-numpag="@(Model.PaginaInicio - 1)" asp-route-filtroActual="@ViewData["FiltroActual"]"
           class="btn btn-primary @anteriordeshabilitado">Anterior</a>

        @for (var i = 1; i <= Model.PaginasTotales; i++)
        {
            var paginaactiva = (i == Model.PaginaInicio) ? "active" : "";
            <a asp-action="Index" asp-route-ordenActual="@ViewData["OrdenActual"]" asp-route-numpag="@i"
           asp-route-filtroActual="@ViewData["FiltroActual"]" class="btn btn-primary @paginaactiva">
                @i
            </a>
        }

        <a asp-action="Index" asp-route-ordenActual="@ViewData["OrdenActual"]"
           asp-route-numpag="@(Model.PaginaInicio + 1)" asp-route-filtroActual="@ViewData["FiltroActual"]"
           class="btn btn-primary @siguientedeshabilitado">Siguiente</a>
    </ul>
</div>

            </body>
            </html>