@model IEnumerable<systemquchooch.Models.FichaCalificacion>

@{
    ViewData["Title"] = "ImprimirFichaCalificacions";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImprimirFichaCalificacions</title>

    <style>

        table.tbproductos {
            border-collapse: collapse;
            border-spacing: 4px;
        }

            table.tbproductos thead tr th {
                background-color: #2980B9;
                padding: 6px;
                font-size: 15px;
                color: white;
                text-align: center;
                border: 1px solid #34495E;
            }

            table.tbproductos tbody tr td {
                padding: 10px;
                background-color: #D4E6F1;
                text-align: center;
                border: 1px solid #34495E;
            }


        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }
    </style>
</head>

<body>
    <div class="row">
        <div clas="col-sm-4">
            <img src="~/imagenes/logo.jpeg" style="width: 250px;" />
        </div>
        <div class="col-sm-8 text-right">
            <h2> Listado de Fichas-Calificaciones</h2>
        </div>
    </div>

    <table class="tbproductos" style="width:100%">
        <thead>
            <tr>
                <th class="tbth">  #  </th>
                <th class="tbth">  Estudiante </th>
                <th class="tbth">  Periodo  </th>
                <th class="tbth">  Desempeño  </th>
                <th class="tbth">  Fecha Entrega </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notas)
                </th>
                <th class="tbth">  Promedio  </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoFichaCalificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoEstudiante)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoPeriodo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoDesempeño)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaEntrega)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notas)
                    </td>
                                        <td>
                        @Html.DisplayFor(modelItem => item.Promedio)
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
